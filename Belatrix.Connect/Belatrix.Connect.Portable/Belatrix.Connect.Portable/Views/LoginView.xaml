<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
						 xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
						 prism:ViewModelLocator.AutowireViewModel="True"
						 x:Class="Belatrix.Connect.Portable.Views.LoginView">
	<StackLayout Orientation="Vertical" BackgroundColor="White">
		<Image Source="logo.png"></Image>
		<StackLayout Orientation="Vertical">
			<Entry Placeholder="User Name" Text="{Binding Username}"/>
			<Entry Placeholder="Password" Text="{Binding Password}"/>
			<Button Text="Log in" Command="{Binding ExecuteLoginCommand}"></Button>
		</StackLayout>
	</StackLayout>
</ContentPage>